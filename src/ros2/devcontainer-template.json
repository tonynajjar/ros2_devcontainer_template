{
    "id": "ros2",
    "version": "0.0.1",
    "name": "ros2 devcontainer template",
    "description": "A ros2 devcontainer template",
    "documentationURL": "https://github.com/tonynajjar/ros2_devcontainer_template/tree/main/src/ros2",
    "licenseURL": "https://github.com/tonynajjar/ros2_devcontainer_template/blob/main/LICENSE",
    "keywords": ["ros2"],
    "platforms": ["Any"],
    "options": {
        "distro": {
            "type": "string",
            "description": "Which ROS2 distro to use. See https://docs.ros.org/en/rolling/Releases.html",
            "proposals": [
                "humble",
                "iron",
                "jazzy",
                "rolling"
              ],
            "default": "rolling"
        },
        "packageURL": {
            "type": "string",
            "description": "URL of the ROS package/repo to clone in the workspace. Leave empty to not clone any package",
            "default": "https://github.com/ros/robot_state_publisher"
        }
    }
}
